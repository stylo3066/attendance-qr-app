{
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd vercel-proxy && npm install"
  },
  "deploy": {
    "startCommand": "cd vercel-proxy && PORT=$PORT HMAC_SECRET=${HMAC_SECRET:-dev_secret} node server.js",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "variables": {
    "NODE_ENV": "production",
    "HMAC_SECRET": "dev_secret"
  }
}
