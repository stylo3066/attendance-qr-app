{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    }
  ],
  "env": {
    "HMAC_SECRET": "@hmac-secret",
    "FIREBASE_SERVICE_ACCOUNT_JSON": "@firebase-service-account"
  }
}